<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminLogin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding">

            <TextView
                android:id="@+id/tvMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:maxLines="1"
                android:text="@string/admin_login"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/size_40sp"
                android:textStyle="bold"
                app:autoSizeTextType="uniform" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutAdminUsername"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvMain"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                app:boxStrokeColor="@color/colorPrimary"
                app:hintTextColor="@color/colorBlack"
                app:startIconDrawable="@drawable/ic_account_circle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAdminUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_username"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutAdminPassword"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutAdminUsername"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20"
                app:boxStrokeColor="@color/colorPrimary"
                app:endIconMode="password_toggle"
                app:hintTextColor="@color/colorBlack"
                app:startIconDrawable="@drawable/ic_baseline_lock_filled">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAdminPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword"
                    android:maxLength="64"
                    android:maxLines="1"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="@dimen/short_button_width"
                android:layout_height="@dimen/button_height"
                android:layout_below="@+id/layoutAdminPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/margin_to_show_elevation"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="@dimen/margin_to_show_elevation"
                android:elevation="@dimen/elevation"
                android:text="@string/btn_admin_login"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_20sp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="@dimen/size_20sp"
                app:autoSizeTextType="uniform"
                app:backgroundTint="@color/colorPrimary"
                app:cornerRadius="@dimen/button_corner_radius" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>