<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginEnd="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_5"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="@dimen/corner_radius"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            tools:ignore="InefficientWeight">

            <TextView
                android:id="@+id/tvNewsletterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Newsletter name"
                android:textSize="@dimen/size_20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvUploadTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Upload time"
                android:textSize="@dimen/size_16sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgDownload"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_baseline_download"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imgDownloaded"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_baseline_check_circle_filled"
            tools:ignore="ContentDescription" />

    </LinearLayout>
</androidx.cardview.widget.CardView>